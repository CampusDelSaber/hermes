<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:id="@+id/styleOptionsWindow"
        android:layout_width="360dp"
        android:layout_height="220dp"
        android:background="@color/blueOxford_app_theme"
        android:orientation="horizontal"
        android:visibility="gone"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.686"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.426">

        <LinearLayout
            android:layout_width="120dp"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:orientation="vertical">

            <ImageButton
                android:id="@+id/btnDefault"
                android:layout_width="match_parent"
                android:layout_height="190dp"
                android:layout_marginTop="6dp"
                android:layout_marginStart="6dp"
                android:layout_marginEnd="3dp"
                android:tag="@string/default_style"
                android:src="@drawable/default_style"
                android:onClick="changeMapStyle">
            </ImageButton>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/default_style"
                android:textColor="@color/white"
                android:textSize="18sp">
            </TextView>

        </LinearLayout>

        <LinearLayout
            android:layout_width="120dp"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:orientation="vertical">

            <ImageButton
                android:id="@+id/btnSatellite"
                android:layout_width="match_parent"
                android:layout_height="190dp"
                android:layout_marginTop="6dp"
                android:layout_marginStart="3dp"
                android:layout_marginEnd="3dp"
                android:tag="@string/satellite_style"
                android:src="@drawable/satellite_style"
                android:onClick="changeMapStyle">
            </ImageButton>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/satellite_style"
                android:textColor="@color/white"
                android:textSize="18sp">
            </TextView>

        </LinearLayout>

        <LinearLayout
            android:layout_width="120dp"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:orientation="vertical">

            <ImageButton
                android:id="@+id/btnDarkMode"
                android:layout_width="match_parent"
                android:layout_height="190dp"
                android:layout_marginTop="6dp"
                android:layout_marginStart="3dp"
                android:layout_marginEnd="6dp"
                android:src="@drawable/dark_style"
                android:tag="@string/dark_style"
                android:onClick="changeMapStyle">
            </ImageButton>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/dark_style"
                android:textColor="@color/white"
                android:textSize="18sp">
            </TextView>

        </LinearLayout>

    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>