<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    tools:context=".EmailVerificationActivity">

    <EditText
        android:id="@+id/codeTextField6"
        android:layout_width="50dp"
        android:layout_height="60dp"
        android:layout_marginEnd="20dp"
        android:ems="10"
        android:focusable="auto"
        android:focusableInTouchMode="false"
        android:inputType="number|numberSigned"
        android:maxLength="1"
        android:textIsSelectable="false"
        app:layout_constraintBottom_toTopOf="@+id/resendClickableText"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/codeTextField5"
        app:layout_constraintTop_toBottomOf="@+id/textView5" />

    <ImageView
        android:id="@+id/emailImage"
        android:layout_width="150dp"
        android:layout_height="126dp"
        android:layout_marginTop="50dp"
        android:layout_marginBottom="29dp"
        app:layout_constraintBottom_toTopOf="@+id/textView2"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/email_icon" />

    <TextView
        android:id="@+id/textView2"
        android:layout_width="348dp"
        android:layout_height="36dp"
        android:text="@string/verifyEmailTittle"
        android:textAlignment="center"
        android:textColor="#000000"
        android:textSize="27sp"
        android:textStyle="italic"
        app:layout_constraintBottom_toTopOf="@+id/textView3"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/emailImage" />

    <TextView
        android:id="@+id/textView3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:layout_marginBottom="5dp"
        android:text="@string/emailVerificationSent"
        android:textColor="#000000"
        android:textSize="16sp"
        app:layout_constraintBottom_toTopOf="@+id/textView4"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textView2" />

    <TextView
        android:id="@+id/textView4"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:text="@string/userEmail"
        android:textColor="#000000"
        android:textSize="16sp"
        app:layout_constraintBottom_toTopOf="@+id/textView5"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textView3" />

    <TextView
        android:id="@+id/textView5"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/enterCodeLabel"
        android:textColor="#201313"
        android:textSize="16sp"
        app:layout_constraintBottom_toTopOf="@+id/codeTextField2"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textView4" />

    <EditText
        android:id="@+id/codeTextField1"
        android:layout_width="50dp"
        android:layout_height="60dp"
        android:layout_marginStart="20dp"
        android:ems="10"
        android:focusable="true"
        android:inputType="number|numberSigned"
        android:maxLength="2"
        app:layout_constraintBottom_toTopOf="@+id/resendClickableText"
        app:layout_constraintEnd_toStartOf="@+id/codeTextField2"
        app:layout_constraintHorizontal_bias="0.51"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textView5" />

    <EditText
        android:id="@+id/codeTextField2"
        android:layout_width="50dp"
        android:layout_height="60dp"
        android:ems="10"
        android:focusable="auto"
        android:focusableInTouchMode="false"
        android:inputType="number|numberSigned"
        android:maxLength="2"
        android:textIsSelectable="false"
        app:layout_constraintBottom_toTopOf="@+id/resendClickableText"
        app:layout_constraintEnd_toStartOf="@+id/codeTextField3"
        app:layout_constraintStart_toEndOf="@+id/codeTextField1"
        app:layout_constraintTop_toBottomOf="@+id/textView5" />

    <EditText
        android:id="@+id/codeTextField3"
        android:layout_width="50dp"
        android:layout_height="60dp"
        android:ems="10"
        android:focusable="auto"
        android:focusableInTouchMode="false"
        android:inputType="number|numberSigned"
        android:maxLength="2"
        android:textIsSelectable="false"
        app:layout_constraintBottom_toTopOf="@+id/resendClickableText"
        app:layout_constraintEnd_toStartOf="@+id/codeTextField4"
        app:layout_constraintStart_toEndOf="@+id/codeTextField2"
        app:layout_constraintTop_toBottomOf="@+id/textView5" />

    <EditText
        android:id="@+id/codeTextField4"
        android:layout_width="50dp"
        android:layout_height="60dp"
        android:ems="10"
        android:focusable="auto"
        android:focusableInTouchMode="false"
        android:inputType="number|numberSigned"
        android:maxLength="2"
        android:textIsSelectable="false"
        app:layout_constraintBottom_toTopOf="@+id/resendClickableText"
        app:layout_constraintEnd_toStartOf="@+id/codeTextField5"
        app:layout_constraintStart_toEndOf="@+id/codeTextField3"
        app:layout_constraintTop_toBottomOf="@+id/textView5" />

    <EditText
        android:id="@+id/codeTextField5"
        android:layout_width="50dp"
        android:layout_height="60dp"
        android:ems="10"
        android:focusable="auto"
        android:focusableInTouchMode="false"
        android:inputType="number|numberSigned"
        android:maxLength="2"
        android:textIsSelectable="false"
        app:layout_constraintBottom_toTopOf="@+id/resendClickableText"
        app:layout_constraintEnd_toStartOf="@+id/codeTextField6"
        app:layout_constraintStart_toEndOf="@+id/codeTextField4"
        app:layout_constraintTop_toBottomOf="@+id/textView5" />

    <TextView
        android:id="@+id/resendClickableText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:clickable="true"
        android:text="@string/resendLabel"
        android:textAlignment="center"
        android:textColor="#127DAE"
        android:textSize="20sp"
        app:layout_constraintBottom_toTopOf="@+id/cancelButton"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/codeTextField2" />

    <Button
        android:id="@+id/cancelButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="50dp"
        android:layout_marginBottom="58dp"
        android:foregroundGravity="center_horizontal"
        android:text="cancel"
        android:textAlignment="center"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toStartOf="@+id/continueButton"
        app:layout_constraintStart_toStartOf="parent" />

    <Button
        android:id="@+id/continueButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="50dp"
        android:layout_marginBottom="58dp"
        android:text="continue"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/cancelButton" />

</androidx.constraintlayout.widget.ConstraintLayout>