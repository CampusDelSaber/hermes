<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <RelativeLayout
        android:id="@+id/directions_form_real_time"
        android:layout_width="412dp"
        android:layout_height="155dp"
        android:animateLayoutChanges="true"
        android:background="@color/oxfordBlue"
        android:clickable="true"
        android:focusable="true"
        android:paddingLeft="20dp"
        android:paddingRight="20dp"
        android:visibility="gone"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="1.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.0"
        tools:visibility="visible">

        <Button
            android:id="@+id/close_button_2"
            android:layout_width="83dp"
            android:layout_height="35dp"
            android:layout_alignParentTop="true"
            android:layout_alignParentEnd="true"
            android:layout_marginTop="10dp"
            android:layout_marginEnd="0dp"
            android:backgroundTint="#FFFFFF"
            android:text="Close"
            android:textColor="#000000"
            android:textSize="13dp" />

        <ImageView
            android:id="@+id/indication_image"
            android:layout_width="90dp"
            android:layout_height="97dp"
            android:layout_alignParentEnd="true"
            android:layout_alignParentBottom="true"
            android:layout_marginEnd="250dp"
            android:layout_marginBottom="30dp"
            app:srcCompat="@drawable/go_straight_icon" />

        <TextView
            android:id="@+id/indication_text"
            android:layout_width="209dp"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:layout_alignParentBottom="true"
            android:layout_marginEnd="0dp"
            android:layout_marginBottom="71dp"
            android:text="INDICATION"
            android:textColor="#FFFFFF"
            android:textSize="30dp" />

        <TextView
            android:id="@+id/street_name"
            android:layout_width="209dp"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:layout_alignParentBottom="true"
            android:layout_marginEnd="0dp"
            android:layout_marginBottom="20dp"
            android:text="Street name"
            android:textColor="#FFFFFF"
            android:textSize="20dp"
            android:maxLines="2"
            android:ellipsize="end" />

    </RelativeLayout>


</androidx.constraintlayout.widget.ConstraintLayout>