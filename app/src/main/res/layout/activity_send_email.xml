<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_marginBottom="90dp"
    android:elevation="90dp"
    app:strokeColor="@color/colorGoogleText"
    app:strokeWidth="1dp"
    tools:context=".SendEmailActivity">

    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:showDividers="middle"
        app:cardCornerRadius="40dp"
        app:cardElevation="20dp"
        app:strokeWidth="9dp"
        tools:ignore="MissingConstraints"
        tools:layout_editor_absoluteX="-4dp"
        tools:layout_editor_absoluteY="190dp">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:showDividers="middle"
            tools:layout_editor_absoluteX="-4dp"
            tools:layout_editor_absoluteY="184dp">


            <TextView
                android:id="@+id/incident_tablelayout"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/white"
                android:gravity="center"
                android:text="Verify your email"
                android:textSize="24sp"
                android:textStyle="bold" />

            <RelativeLayout
                android:id="@+id/incident_layout"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/incident_tablelayout"
                android:layout_gravity="bottom"
                android:foregroundGravity="bottom">

                <TextView
                    android:id="@+id/incident_text"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="10dp"
                    android:layout_marginTop="10dp"
                    android:paddingLeft="12dp"
                    android:paddingRight="5dp"
                    android:text="A verification code was sent to your email, please enter the code."
                    android:textSize="18sp" />

                <LinearLayout
                    android:id="@+id/line1"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/incident_text"
                    android:orientation="vertical">

                    <TextView
                        android:id="@+id/titleVerify"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:labelFor="@+id/editTextNumber"
                        android:text="@string/verify_code_label"
                        android:textAlignment="center"
                        android:textStyle="bold" />

                    <EditText
                        android:id="@+id/editTextNumber"
                        android:layout_width="wrap_content"
                        android:layout_height="48dp"
                        android:layout_marginStart="98dp"
                        android:layout_marginTop="5dp"
                        android:layout_marginEnd="91dp"
                        android:ems="10"
                        android:hint="@string/verify_code_hint"
                        android:inputType="number" />

                </LinearLayout>

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/line1"
                    android:layout_marginTop="0dp"
                    tools:ignore="NotSibling">

                    <Button
                        android:id="@+id/accept_button"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentStart="true"
                        android:layout_marginStart="100dp"
                        android:backgroundTint="@color/mapboxBlueDark"
                        android:text="Accept"
                        android:textColor="@color/white" />

                    <Button
                        android:id="@+id/cancel_button"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentEnd="true"
                        android:layout_marginEnd="100dp"
                        android:backgroundTint="@color/mapboxBlueDark"
                        android:text="Cancel"
                        android:textColor="@color/white" />

                </RelativeLayout>
            </RelativeLayout>

        </RelativeLayout>
    </androidx.cardview.widget.CardView>
</androidx.constraintlayout.widget.ConstraintLayout>