<?xml version="1.0" encoding="utf-8"?>
<androidx.coordinatorlayout.widget.CoordinatorLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:mapbox="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity" android:orientation="horizontal" android:textAlignment="gravity"
    mapbox:flow_horizontalAlign="center" mapbox:flow_verticalAlign="center">

    <com.mapbox.mapboxsdk.maps.MapView
        android:id="@+id/mapView"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        mapbox:mapbox_cameraTargetLat="-17.3895"
        mapbox:mapbox_cameraTargetLng="-66.1568"
        mapbox:mapbox_cameraZoom="12" />

    <include layout="@layout/waypoint_info_fragment" />
</androidx.coordinatorlayout.widget.CoordinatorLayout>