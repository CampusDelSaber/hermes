<?xml version="1.0" encoding="utf-8"?>
<androidx.coordinatorlayout.widget.CoordinatorLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:mapbox="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="horizontal"
    android:textAlignment="gravity"
    mapbox:flow_horizontalAlign="center"
    mapbox:flow_verticalAlign="center"
    tools:context=".MainActivity">


    <com.mapbox.mapboxsdk.maps.MapView
        android:id="@+id/mapView"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        mapbox:mapbox_cameraTargetLat="-17.3895"
        mapbox:mapbox_cameraTargetLng="-66.1568"
        mapbox:mapbox_cameraZoom="12">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <androidx.cardview.widget.CardView
                android:id="@+id/cardView4"
                android:layout_width="match_parent"
                android:layout_height="60dp"
                android:backgroundTint="@color/blueOxford_app_theme"
                mapbox:cardElevation="10dp"
                tools:ignore="MissingConstraints">

                <de.hdodenhof.circleimageview.CircleImageView
                    android:id="@+id/hamburgerButton"
                    android:layout_width="35dp"
                    android:layout_height="32dp"
                    android:layout_marginStart="5dp"
                    android:layout_marginTop="4dp"
                    android:background="@drawable/img_burger_menu_button"
                    android:elevation="20dp"
                    android:onClick="openSideMenu"
                    android:translationX="10dp"
                    android:translationY="10dp"
                    mapbox:layout_constraintBottom_toBottomOf="parent"
                    mapbox:layout_constraintEnd_toEndOf="parent"
                    mapbox:layout_constraintHorizontal_bias="0.0"
                    mapbox:layout_constraintStart_toStartOf="parent"
                    mapbox:layout_constraintTop_toTopOf="parent"
                    mapbox:layout_constraintVertical_bias="0.26"
                    tools:ignore="SpeakableTextPresentCheck,TouchTargetSizeCheck" />


                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:baselineAligned="false"
                    android:orientation="vertical"
                    android:paddingStart="90dp"
                    android:paddingEnd="60dp">

                    <SearchView
                        android:id="@+id/searchView"
                        android:layout_width="match_parent"
                        android:layout_height="33dp"
                        android:layout_marginTop="38px"
                        android:background="@color/white"
                        android:rotationX="2" />

                </LinearLayout>
            </androidx.cardview.widget.CardView>

            <ScrollView
                android:id="@+id/searchResults"
                android:layout_width="match_parent"
                android:layout_height="159dp"
                android:layout_marginStart="90dp"
                android:layout_marginEnd="60dp"
                android:layout_marginBottom="520dp"
                android:background="#FFFFFF"
                android:contentDescription="@string/app_name"
                android:elevation="0dp"
                android:text="@string/app_name"
                android:translationZ="90dp"
                mapbox:layout_constraintBottom_toBottomOf="parent"
                mapbox:layout_constraintEnd_toEndOf="parent"
                mapbox:layout_constraintStart_toStartOf="parent"
                mapbox:layout_constraintTop_toBottomOf="@+id/cardView4">

                <LinearLayout
                    android:id="@+id/searchResultsLayout"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical" />
            </ScrollView>
        </androidx.constraintlayout.widget.ConstraintLayout>

    </com.mapbox.mapboxsdk.maps.MapView>

    <ImageButton
        android:id="@+id/btn_change_style"
        android:layout_width="30dp"
        android:layout_height="30dp"
        android:layout_gravity="right"
        android:layout_margin="15dp"
        android:background="@android:color/transparent"
        android:src="@drawable/img_layer_icon"
        android:translationY="250px"
        tools:ignore="SpeakableTextPresentCheck,SpeakableTextPresentCheck,TouchTargetSizeCheck"
        android:importantForAccessibility="no" />

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="bottom|end"
        android:orientation="vertical">

        <ImageButton
            android:id="@+id/locationButton"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:layout_margin="10dp"
            android:background="@android:color/transparent"
            android:src="@drawable/img_current_location_icon"
            android:text="@string/get_location_text"
            tools:ignore="SpeakableTextPresentCheck,TouchTargetSizeCheck"
            android:importantForAccessibility="no" />

    </LinearLayout>

    <include
        layout="@layout/incident_form_fragment"
        mapbox:layout_anchor="@+id/mapView"
        mapbox:layout_anchorGravity="center" />
    <include
        layout="@layout/waypoint_options_fragment"
        mapbox:layout_anchor="@+id/mapView"
        mapbox:layout_anchorGravity="center" />

    <LinearLayout
        android:id="@+id/lateralMenu"
        android:layout_width="300dp"
        android:layout_height="match_parent"
        android:layout_marginTop="60dp"
        android:background="@color/blueOxford_app_theme"
        android:elevation="10dp"
        android:gravity="bottom"
        android:orientation="vertical"
        android:visibility="gone"
        mapbox:layout_constraintBottom_toBottomOf="parent"
        mapbox:layout_constraintStart_toStartOf="parent"
        mapbox:layout_constraintTop_toTopOf="parent">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:gravity="center"
            android:onClick="showAccount"
            android:text="@string/account_text"
            android:textColor="@color/white" />

        <TextView
            android:id="@+id/logout"
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:background="@color/mapboxRed"
            android:gravity="center"
            android:onClick="logOut"
            android:text="@string/log_out_text"
            android:textColor="@color/white" />

    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:gravity="center"
        android:orientation="vertical">

        <Button
            android:id="@+id/sideMenuButton"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Open Side Menu"
            android:onClick="openIncidentsDialog" />

    </LinearLayout>
</androidx.coordinatorlayout.widget.CoordinatorLayout>