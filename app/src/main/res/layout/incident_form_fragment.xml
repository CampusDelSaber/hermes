<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <RelativeLayout
        android:id="@+id/incident_form"
        android:layout_width="wrap_content"
        android:layout_height="250dp"
        android:animateLayoutChanges="true"
        android:gravity="bottom"
        android:visibility="visible"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        tools:visibility="visible">

        <TextView
            android:id="@+id/top_border"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/mapboxBlueDark"
            />

        <TextView
            android:id="@+id/incident_tablelayout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/top_border"
            android:background="@color/white"
            android:gravity="center"
            android:text="Incident Report"
            android:textSize="24sp"
            android:textStyle="bold" />

        <RelativeLayout
            android:id="@+id/incident_layout"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_below="@id/incident_tablelayout"
            android:layout_gravity="bottom"
            android:background="@color/white"
            android:foregroundGravity="bottom">

            <TextView
                android:id="@+id/incident_text"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="10dp"
                android:layout_marginTop="10dp"
                android:text="Incident Type"
                android:textSize="18sp"
                android:textStyle="bold">

            </TextView>

            <Spinner
                android:id="@+id/incident_spinner"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/incident_text"
                android:layout_marginStart="10dp"
                android:textSize="14sp">

            </Spinner>

            <TextView
                android:id="@+id/incident_time"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/incident_spinner"
                android:layout_marginStart="10dp"
                android:text="Estimated Time"
                android:textSize="18sp"
                android:textStyle="bold" />

            <NumberPicker
                android:id="@+id/numberPicker"
                android:layout_width="wrap_content"
                android:layout_height="65dp"
                android:layout_below="@id/incident_time"
                android:layout_marginStart="10dp"/>

            <Spinner
                android:id="@+id/incident_time_spinner"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/incident_time"
                android:layout_marginStart="100dp"
                android:layout_marginTop="24dp" />

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_below="@id/numberPicker"
                android:layout_marginTop="0dp">

                <Button
                    android:id="@+id/accept_button"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentStart="true"
                    android:layout_marginStart="100dp"
                    android:backgroundTint="@color/mapboxBlueDark"
                    android:text="Accept"
                    android:textColor="@color/white" />

                <Button
                    android:id="@+id/cancel_button"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentEnd="true"
                    android:layout_marginEnd="100dp"
                    android:backgroundTint="@color/mapboxBlueDark"
                    android:text="Cancel"
                    android:textColor="@color/white" />
            </RelativeLayout>
        </RelativeLayout>
    </RelativeLayout>

</androidx.constraintlayout.widget.ConstraintLayout>