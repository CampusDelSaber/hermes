<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <RelativeLayout
        android:id="@+id/incident_form"
        android:layout_width="wrap_content"
        android:layout_height="250dp"
        android:gravity="bottom"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        android:visibility="visible"
        android:animateLayoutChanges="true">

        <TextView
            android:id="@+id/incident_tablelayout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:text="Incident"
            android:textSize="24sp"
            android:textStyle="bold"
            android:textColor="@color/white"
            android:background="@color/mapboxBlueDark"
            >
        </TextView>

        <RelativeLayout
            android:id="@+id/incident_layout"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_gravity="bottom"
            android:foregroundGravity="bottom"
            android:background="@color/white"
            android:layout_below="@id/incident_tablelayout">

            <TextView
                android:id="@+id/incident_text"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="10dp"
                android:layout_marginTop="10dp"
                android:text="Incident Type"
                android:textSize="18sp"
                android:textStyle="bold">

            </TextView>
            <Spinner
                android:id="@+id/incident_spinner"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="10dp"
                android:textSize="14sp"
                android:layout_below="@id/incident_text">

            </Spinner>

            <TextView
                android:id="@+id/incident_time"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="10dp"
                android:text="Estimated Time"
                android:textSize="18sp"
                android:textStyle="bold"
                android:layout_below="@id/incident_spinner">
            </TextView>

            <com.google.android.material.textfield.TextInputLayout
                android:id="@+id/incident_time_text_input"
                android:layout_width="80dp"
                android:layout_height="wrap_content"
                android:layout_marginStart="10dp"
                android:layout_below="@id/incident_time">
                <com.google.android.material.textfield.TextInputEditText
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:inputType="number"
                    android:textSize="14sp">
                </com.google.android.material.textfield.TextInputEditText>
            </com.google.android.material.textfield.TextInputLayout>

            <Spinner
                android:id="@+id/incident_time_spinner"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="100dp"
                android:layout_marginTop="24dp"
                android:layout_below="@id/incident_time">
            </Spinner>

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_below="@id/incident_time_text_input"
                android:layout_marginTop="0dp">

                <Button
                    android:id="@+id/accept_button"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentStart="true"
                    android:layout_marginStart="100dp"
                    android:backgroundTint="@color/mapboxBlueDark"
                    android:text="Accept"
                    android:textColor="@color/white">
                </Button>

                <Button
                    android:id="@+id/cancel_button"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentEnd="true"
                    android:layout_marginEnd="100dp"
                    android:backgroundTint="@color/mapboxBlueDark"
                    android:text="Cancel"
                    android:textColor="@color/white">
                </Button>
            </RelativeLayout>
        </RelativeLayout>
    </RelativeLayout>

</androidx.constraintlayout.widget.ConstraintLayout>